{
  system.defaults = {
    # Global settings
    NSGlobalDomain = {
      # Show all file extensions
      AppleShowAllExtensions = true;

      # Automatically hide and show the menu bar
      _HIHideMenuBar = true;
    };

    # Dock settings
    dock = {
      # Don't show recent applications
      show-recents = false;

      # Minimize to application
      minimize-to-application = true;
    };

    # Finder settings
    finder = {
      # Show all file extensions
      AppleShowAllExtensions = true;
    };
  };
}
